{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "ad": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "advertiser": {
          "type": "string"
        },
        "version": {
          "type": "string",
          
              "versionNumber": {
                "type": "string"
              },
            "required": [
              "versionNumber"
            ]
          }
        },
        "adUnits": {
          "type": "array",
          
              "name": {
                "type": "string"
              },
              "size": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "name"
            ]
          }
        },
        "assetGroups": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "name"
            ]
          }
        },
        "creativeComponents": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "assetType": {
      					"enum": ["html","javascript","css","image","animatedImage","media","svgImage","webGl","dataFeed","assetFeed","Text","Fonts","Uri","custom"]
              },
              "componentDescription": {
                "type": "string"
              },
              "adUnit": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "assets": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "source": {
                      "type": "string"
                    },
                    "sourceType": {
                      "type": "string"
                    },
                    "fallback": {
                      "type": "string"
                    },
                    "target": {
                      "type": "string"
                    },
                    "assetGroupIds": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "attributes": {
                      "type": "object"
                    }
                  },                   
                  "required": [
                    "id",
                    "name",
                    "source",
                    "sourceType",
                    "fallback"
                  ]
                }
              }
            },
            "required": [
              "id",
              "name",
              "assetType",
              "adUnit",
              "assets"
            ]
          }
        }
      },
      "required": [
        "id",
        "name",
        "advertiser",
        "adUnits",
        "creativeComponents"
      ]
    }
  },
  "required": [
    "ad"
  ]
}
